<blog-roll>
    <div if={!posts || posts.length === 0}>
        Hello .... You do not have any posts. <br/>

        <a href="/new" class="button button-primary">Create your first post now</a>
    </div>
    <post each={post in posts}
          url={post.url}
          excerpt="true">
    </post>

  <script>
    import post from '../tags/post.riot'

    export default {
      components: {
        post
      },  
        onBeforeMount() {
            this.dbMixin.init(this);
        }
    }
  </script>
</blog-roll>